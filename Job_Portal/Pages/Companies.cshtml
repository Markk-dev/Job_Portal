@page
@model Job_Portal.Pages.CompaniesModel
@{
    ViewData["Title"] = "Companies";
}

<head>
    <link rel="stylesheet" href="~/css/comp.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<div class="companies-container">
    <!-- Hero section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-image">
                <img src="/images/image1.png" alt="Workplace illustration" />
            </div>
            <div class="hero-text">
                <h1 class="hero-title">Find a workplace that fits for you</h1>
                <p class="hero-description">
                    Discover what an employer is really like before you make your next move.
                    Search reviews and ratings, and filter companies based on the qualities
                    that matter most to your job search.
                </p>
            </div>
        </div>
    </div>

    <!-- Search bar -->
    <div class="search-container">
        <div class="search-box">
            <i class="search-icon">🔍</i>
            <input type="text" placeholder="Search for a company" />
        </div>
    </div>

    <!-- Main content -->
    <div class="main-content">
        <div class="content-header">
            <h2 class="section-title">Explore Companies</h2>
        </div>

        <div class="content-grid">
            <!-- Filters sidebar -->
            <div class="filters-sidebar">
                <form method="get">
                    <div class="filter-group">
                        <label class="filter-label">Company</label>
                        <div class="filter-input">
                            <select asp-for="SearchCompany" class="form-select" onchange="this.form.submit()">
                                <option value="">Select a company</option>
                                @foreach (var company in Model.Companies)
                                {
                                    <option value="@company.Id" selected="@(Model.SelectedCompany?.Id == company.Id ? "selected" : null)">
                                        @company.Name
                                    </option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Location</label>
                        <div class="filter-input">
                            <input type="text" asp-for="SearchLocation" class="form-control" placeholder="Select a location" />
                        </div>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Industries</label>
                        <div class="filter-input">
                            <input type="text" asp-for="SearchIndustries" class="form-control" placeholder="e.g. healthcare, internet, education" />
                        </div>
                    </div>
                </form>
            </div>

            <!-- Company details -->
            <div class="company-details">
                <div class="company-header">
                    <div class="company-logo" style="background-color: @Model.SelectedCompany.LogoColor"></div>
                    <div class="company-info">
                        <h3 class="company-name">@Model.SelectedCompany.Name</h3>
                        <div class="company-location">@Model.SelectedCompany.Location</div>
                    </div>
                    <div class="company-actions">
                        <button class="action-btn">
                            <i class="more-icon">⋯</i>
                        </button>
                        <button class="action-btn">
                            <i class="save-icon">🔖</i>
                        </button>
                    </div>
                </div>

                <div class="company-description">
                    <p>@Model.SelectedCompany.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
